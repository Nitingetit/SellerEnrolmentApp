<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
      
           <RadioGroup
            android:id="@+id/radio_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/online_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/online"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/offline_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:text="@string/pending"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/pinNoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100" >

            <CheckBox
                android:id="@+id/pinCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:clickable="true"
                 />

            <TextView
                android:id="@+id/pinNoTextView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="PIN Code"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/editTextPinNo"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_weight="65"
                android:layout_marginLeft="19dp"
                android:background="@android:drawable/btn_dropdown"
                android:textColor="#ffffff"
                 >
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobileNoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100" >

            <CheckBox
                android:id="@+id/mobileCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                />

            <TextView
                android:id="@+id/mobileNoTextView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="Mobile"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTxtMobile"
                android:layout_width="114dp"
                android:layout_height="35dp"
                android:ems="10"
                android:background="@drawable/rect_text_edit"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="4dp"
                android:maxLength="10"
                android:layout_weight="50"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100" >

            <CheckBox
                android:id="@+id/nameCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="Name"
                android:textSize="16sp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/editTxtName"
                android:layout_width="114dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="text"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/rect_text_edit"
                android:layout_weight="50"
                android:textColor="#000000" />

        </LinearLayout>
        
        

        
        
        
